<Window x:Class="Project_PlanningTool_Ambulance_Icket_Michael.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_PlanningTool_Ambulance_Icket_Michael"
        mc:Ignorable="d"
        Title="Planning Tool" SizeToContent="WidthAndHeight" ResizeMode="NoResize">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            
            <GroupBox Height="150" Width="500" Header="Periode">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Vertical" Grid.Column="0">
                    <TextBlock Height="30" Width="150" Text="Maand" TextAlignment="Left" Grid.Column="0" HorizontalAlignment="Left" FontSize="15"></TextBlock>
                        <ComboBox Height="30" Width="150" Text="" Grid.Column="0" HorizontalAlignment="Left" FontSize="12"></ComboBox>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Grid.Column="1">
                        <TextBlock Height="30" Width="150" Text="Jaar" TextAlignment="Left" Grid.Column="1" HorizontalAlignment="Left" FontSize="15"></TextBlock>
                        <ComboBox Height="30" Width="150" Text="" Grid.Column="1" HorizontalAlignment="Left" FontSize="12"></ComboBox>
                    </StackPanel>
                </Grid>
            </GroupBox>
            <GroupBox Height="150" Width="900" Header="Planning">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Vertical" Grid.Column="0">
                        <Button x:Name="Show" Content="Show" Width="120" Height="25" Margin="10" FontSize="15"></Button>
                        <Button x:Name="Plan" Content="Plan" Width="120" Height="25" Margin="5" FontSize="15"></Button>
                        <Button x:Name="Fix" Content="Fix" Width="120" Height="25" Margin="10" FontSize="15"></Button>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Grid.Column="1">
                        <RadioButton Content="All" Width="150" Grid.Column="1" Margin="15" HorizontalAlignment="Center" IsChecked="True" />
                        <RadioButton Content="Available" Width="150" Grid.Column="1" Margin="10" HorizontalAlignment="Center" />
                    </StackPanel>
                    <TextBox IsReadOnly="True" VerticalScrollBarVisibility="Visible" Grid.Column="2"></TextBox>

                </Grid>
            </GroupBox>
        
        </StackPanel>
        <GroupBox Height="600" Width="1400" Header="Kalender">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <Grid x:Name="GridKalender">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Week" Margin="10" Grid.Column="0" Grid.Row="0" FontSize="25" TextAlignment="Center"></TextBlock>
                        <TextBlock Text="Maandag" Margin="10" Grid.Column="1" Grid.Row="0" FontSize="25" TextAlignment="Center"></TextBlock>
                        <TextBlock Text="Dinsdag" Margin="10" Grid.Column="2" Grid.Row="0" FontSize="25" TextAlignment="Center"></TextBlock>
                        <TextBlock Text="Woensdag" Margin="10" Grid.Column="3" Grid.Row="0" FontSize="25" TextAlignment="Center"></TextBlock>
                        <TextBlock Text="Donderdag" Margin="10" Grid.Column="4" Grid.Row="0" FontSize="25" TextAlignment="Center"></TextBlock>
                        <TextBlock Text="Vrijdag" Margin="10" Grid.Column="5" Grid.Row="0" FontSize="25" TextAlignment="Center"></TextBlock>
                        <TextBlock Text="Zaterdag" Margin="10" Grid.Column="6" Grid.Row="0" FontSize="25" TextAlignment="Center"></TextBlock>
                        <TextBlock Text="Zondag" Margin="10" Grid.Column="7" Grid.Row="0" FontSize="25" TextAlignment="Center"></TextBlock>
                    </Grid>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="1" Margin="10" Grid.Column="0" Grid.Row="0" FontSize="25" TextAlignment="Center"></TextBlock>
                        <TextBlock Text="2" Margin="10" Grid.Column="0" Grid.Row="1" FontSize="25" TextAlignment="Center"></TextBlock>
                        <TextBlock Text="3" Margin="10" Grid.Column="0" Grid.Row="2" FontSize="25" TextAlignment="Center"></TextBlock>
                        <TextBlock Text="4" Margin="10" Grid.Column="0" Grid.Row="3" FontSize="25" TextAlignment="Center"></TextBlock>
                        <TextBlock Text="5" Margin="10" Grid.Column="0" Grid.Row="4" FontSize="25" TextAlignment="Center"></TextBlock>
                        <TextBlock Text="6" Margin="10" Grid.Column="0" Grid.Row="5" FontSize="25" TextAlignment="Center"></TextBlock>
                    </Grid>
                </Grid>
          </ScrollViewer>
        </GroupBox>
    </StackPanel>
</Window>
